<!DOCTYPE html>
<html lang="en">

<% include ../views/partials/head %>

<body>
  <main>
<% include ../views/partials/nav %>
    <!-- Signup -->
    <section class="container g-py-100">
      <div class="row justify-content-center">
        <div class="col-sm-10 col-md-9 col-lg-6">
          <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
            <header class="text-center mb-4">
              <h2 class="h2 g-color-black g-font-weight-600">注册</h2>
            </header>
            <% if (flashMessage.length > 0) { %>
              <div class="alert alert-danger"> <span class="alert-danger"><%= flashMessage %> <span></div>
            <% } %>

            <!-- Form -->
            <form action="/signup" method="post" class="g-py-15">
              <div class="row">
                <div class="col-xs-12 col-sm-6 mb-4">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
                    </div>
                    <input name="first_name" 
                      data-parsley-pattern="^[a-zA-Z ]+$" 
                      data-parsley-error-message="请输入有效姓名拼音"
                      required class="half-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="text" placeholder="名字 (拼音)">
                  </div>
                </div>

                <div class="col-xs-12 col-sm-6 mb-4">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
                    </div>
                    <input name="last_name" required 
                    data-parsley-pattern="^[a-zA-Z ]+$" 
                    data-parsley-error-message="请输入有效姓名拼音"
                    class="half-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="text" placeholder="姓氏 (拼音)">
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-communication-062 u-line-icon-pro"></i></span>
                  </div>
                  <input name="email" 
                  data-parsley-required-message="请输入有效邮箱"
                  required class="full-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="email" placeholder="邮箱">
                </div>
              </div>

              <div class="mb-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-finance-067 u-line-icon-pro"></i></span>
                  </div>
                  <input name="ref_num" required 
                  data-parsley-required-message="请输入微信ID"
                  class="full-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="text" placeholder="微信号">
                </div>
              </div>


              <div class="mb-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-communication-008 u-line-icon-pro"></i></span>
                  </div>
                  <input name="phone_number" required 
                  data-parsley-length="[10, 10]" 
                  data-parsley-error-message="请输入有效10位电话号码"
                  data-parsley-trigger="keyup" class="full-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="tel" placeholder="电话号码">
                </div>
              </div>

              <div class="mb-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-education-001 u-line-icon-pro"></i></span>
                  </div>
                  <input name="year_of_grade" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="text" placeholder="入学年份">
                </div>
              </div>

              <div class="mb-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-education-001 u-line-icon-pro"></i></span>
                  </div>
                  <input name="major_in_school" class="form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="text" placeholder="学习专业">
                </div>
              </div>

              <div class="row">
                <div class="col-xs-12 col-sm-6 mb-4">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-media-094 u-line-icon-pro"></i></span>
                    </div>
                    <input name="password" 
                    data-parsley-error-message="密码长度不得少于6位"
                    id="password" required data-parsley-length="[6, 50]" data-parsley-trigger="keyup" class="half-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="password" placeholder="设置密码">
                  </div>
                </div>

                <div class="col-xs-12 col-sm-6 mb-4">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text g-width-45 g-brd-right-none g-brd-gray-light-v4 g-color-gray-dark-v5"><i class="icon-media-094 u-line-icon-pro"></i></span>
                    </div>
                    <input name="confirmed_password" 
                    data-parsley-error-message="请再次确认密码"
                    required data-parsley-equalto="#password" data-parsley-trigger="keyup" class="half-cell form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover g-py-15 g-px-15" type="password" placeholder="确认密码">
                  </div>
                </div>
              </div>

              <div class="mb-4">
                <label class="form-check-inline u-check g-color-gray-dark-v5 g-font-size-13 g-pl-25">
                  <input required 
                          data-parsley-required-message="请同意条款"
                          id="agree" class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" type="checkbox">
                  <div class="u-check-icon-checkbox-v6 g-absolute-centered--y g-left-0">
                    <i class="fa g-rounded-2" data-check-icon="&#xf00c"></i>
                  </div>
                  我接受<a href="/terms_and_conditions" target="_blank">服务条款</a>和<a href="/privacy_policy" target="_blank">隐私政策</a>
                </label>
              </div>
  
              <button class="btn btn-md btn-block u-btn-primary rounded-0 g-py-15 mb-5" type="submit">注册</button>

              <div class="d-flex justify-content-center text-center g-mb-30">
                <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
                <span class="align-self-center g-color-gray-dark-v3 mx-4">OR</span>
                <div class="d-inline-block align-self-center g-width-50 g-height-1 g-bg-gray-light-v1"></div>
              </div>

            </form>
            <!-- End Form -->

            <footer class="text-center">
              <p class="g-color-gray-dark-v5 g-font-size-13 mb-0">已经有一个帐户? <a class="g-font-weight-600" href="/login">登陆</a>
              </p>
            </footer>
          </div>
        </div>
      </div>
    </section>
    <!-- End Signup -->

    <% include ../views/partials/footer %>

    <a class="js-go-to u-go-to-v1" href="#!" data-type="fixed" data-position='{
     "bottom": 15,
     "right": 15
   }' data-offset-top="400" data-compensation="#js-header" data-show-effect="zoomIn">
      <i class="hs-icon hs-icon-arrow-top"></i>
    </a>
  </main>

  <div class="u-outer-spaces-helper"></div>
    <% include ../views/partials/script %>


</body>

</html>
